<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx" prefHeight="300.0" prefWidth="450.0">
    <GridPane alignment="CENTER" hgap="10.0" vgap="10.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0"
              AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES"/>
            <ColumnConstraints halignment="RIGHT" hgrow="ALWAYS"/>
        </columnConstraints>
        <Label fx:id="userSettingsLabel" text="User settings:" GridPane.columnSpan="2" GridPane.halignment="CENTER">
            <font>
                <Font size="26.0"/>
            </font>
        </Label>
        <Label fx:id="emailLabel" text="E-mail: *" GridPane.rowIndex="1"/>
        <TextField fx:id="eMailTextField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Label fx:id="userNameLabel" text="User name: *" GridPane.rowIndex="2"/>
        <TextField fx:id="userNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Label fx:id="passwordLabel" text="Old password: *" GridPane.rowIndex="3"/>
        <PasswordField fx:id="oldPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <Label fx:id="newPasswordLabel" text="New password: *" GridPane.rowIndex="4"/>
        <PasswordField fx:id="newPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        <Label fx:id="confirmNewPasswordLabel" text="Confirm new password: *" GridPane.rowIndex="5"/>
        <PasswordField fx:id="confirmNewPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        <Label fx:id="languageLabel" text="Language:" GridPane.rowIndex="6"/>
        <ChoiceBox fx:id="languageChoiceBox" GridPane.halignment="LEFT" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
        <Label fx:id="errorLabel" GridPane.columnSpan="2" GridPane.halignment="RIGHT"
               GridPane.rowIndex="7"/>
        <Button fx:id="cancelButton" mnemonicParsing="false" text="Cancel" GridPane.halignment="CENTER"
                GridPane.rowIndex="8"/>
        <Button fx:id="saveButton" mnemonicParsing="false" text="Save" GridPane.columnIndex="1"
                GridPane.halignment="CENTER"
                GridPane.rowIndex="8"/>
        <opaqueInsets>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </opaqueInsets>
    </GridPane>
</AnchorPane>
